# Production backend URL (used in release builds)
EXPO_PUBLIC_BACKEND_URL=https://your-backend.example.com

# Development backend URL (used when __DEV__ is true)
# Set full URL for simulator: http://localhost:5001
# Set full URL for physical device: http://YOUR_LOCAL_IP:5001
EXPO_PUBLIC_BACKEND_URL_DEV=http://localhost:5001

# Alternative: build dev URL from IP + port (used when EXPO_PUBLIC_BACKEND_URL_DEV is not set)
# Your machine's local IP (find with: ifconfig | grep "inet " | grep -v 127.0.0.1)
EXPO_PUBLIC_LOCAL_IP=192.168.1.100
EXPO_PUBLIC_DEV_PORT=5001
