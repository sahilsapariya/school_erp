SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=
EMAIL_PASSWORD=
DEFAULT_SENDER_NAME=

FLASK_ENV=development
# Required for flask db / flask run when running from app/ directory:
FLASK_APP=backend.app:create_app
DOMAIN_LOCAL=http://127.0.0.1:5000

DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=

# When login is on single domain or localhost (no subdomain), use this tenant subdomain for auth.
# Create a tenant with this subdomain (e.g. "default") so panel and app login work.
DEFAULT_TENANT_SUBDOMAIN=default

DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Celery (optional - enables async email, overdue fee job)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7
RESET_TOKEN_EXP_MINUTES=30


BACKEND_URL=
BACKEND_URL_DEV=http://0.0.0.0:5001
FRONTEND_URL=

# Production: comma-separated allowed origins (e.g. panel URL). Required for CORS.
# Example: CORS_ORIGINS=https://school-panel-hazel.vercel.app,https://your-panel.vercel.app
CORS_ORIGINS=

# When panel and API are on different domains, use None so cross-site cookies work.
# Omit or set to Lax when panel and API share a domain.
SESSION_COOKIE_SAMESITE=None
LOCAL_IP=
EXPO_PORT=
FRONTEND_URL_DEV=
